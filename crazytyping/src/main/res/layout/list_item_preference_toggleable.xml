<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:background="@drawable/item_user_background_selector"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <include layout="@layout/list_item_preference_template" />
        <Switch

            android:layout_marginRight="22dp"
            android:textOff="@string/off"
            android:textOn="@string/on"
            android:thumb="@drawable/switcher_thumb"
            android:track="@drawable/apptheme_switch_bg_holo_light"
            android:id="@+id/toggler"
            android:checked="true"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
</RelativeLayout>