<resources>

    <style name="ModernTheme" parent="android:Theme.Holo.Light">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:icon">@drawable/ic_ab_icon</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back_button</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:switchTextOn">@string/on</item>
        <item name="android:switchTextOff">@string/off</item>
        <!--item name="android:switchPreferenceStyle">@style/mySwitchPreferenceStyle</item-->
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="homeAsUpIndicator">@drawable/ic_back_button</item>
        <item name="android:icon">@drawable/ic_ab_icon</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back_button</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:switchTextOn">@string/on</item>
        <item name="android:switchTextOff">@string/off</item>
    </style>
    <style name="AppTheme.NoTitle" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowTitleSize">0dp</item>
        <item name="windowActionBar">false</item>


    </style>

    <style name="Theme.PageIndicatorDefaults" parent="android:Theme">
            <item name="TabPageIndicatorStyle">@style/Widget.TabPageIndicator</item>
        </style>

    <style name="Widget">
        </style>

    <style name="Widget.TabPageIndicator" parent="Widget">
            <item name="android:gravity">center</item>
            <item name="android:background">@drawable/tab_indicator_item_normal</item>
            <item name="android:paddingLeft">22dip</item>
            <item name="android:paddingRight">22dip</item>
            <item name="android:paddingTop">12dp</item>
            <item name="android:paddingBottom">12dp</item>
            <item name="android:textSize">12sp</item>
            <item name="android:maxLines">1</item>

            <item name="android:divider">@drawable/tab_indicator_divider</item>
            <item name="android:fadingEdge">horizontal</item>
            <item name="android:fadingEdgeLength">8dp</item>

        </style>

    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">

        <item name="background">@drawable/tab_indicator_item_normal</item>
        <item name="titleTextStyle">@style/MyActionBar.TextStyle</item>

        <item name="android:background">@drawable/tab_indicator_item_normal</item>
        <item name="android:titleTextStyle">@style/MyActionBar.TextStyle</item>
        <item name="android:divider">@drawable/tab_indicator_divider</item>
        
    </style>
    <style name="MyActionBar.TextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">

        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="mySwitchPreferenceStyle">
            <item name="android:widgetLayout">@layout/preference_widget_switch</item>
            <item name="android:switchTextOn">@string/on</item>
            <item name="android:switchTextOff">@string/off</item>
    </style>

    <style name="Theme.SmoothProgressBarDefaults" parent="android:Theme">
        <item name="spbStyle">@style/SmoothProgressBar</item>
    </style>

    <style name="SmoothProgressBar" parent="android:Widget.Holo.ProgressBar.Horizontal">
        <item name="spb_color">@color/spb_default_color</item>
        <item name="spb_sections_count">@integer/spb_default_sections_count</item>
        <item name="spb_speed">@string/spb_default_speed</item>
        <item name="spb_stroke_width">@dimen/spb_default_stroke_width</item>
        <item name="spb_stroke_separator_length">@dimen/spb_default_stroke_separator_length</item>
        <item name="spb_reversed">@bool/spb_default_reversed</item>
        <item name="spb_mirror_mode">@bool/spb_default_mirror_mode</item>
    </style>
</resources>
