<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.agcy.vkproject.spy" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.agcy.vkproject.spy.StartActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.agcy.vkproject.spy.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="com.agcy.vkproject.spy.FriendsActivity"
            android:label="@string/title_activity_friends" >
        </activity>

        <service
            android:name="com.agcy.vkproject.spy.LongPollService"
            android:enabled="true"
            android:exported="true" >
        </service>
    </application>

</manifest>
