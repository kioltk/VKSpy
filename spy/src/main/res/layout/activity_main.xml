<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${packageName}.${activityClass}">
    <TextView
        android:id="@+id/status"
        android:text="згрзка"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:id="@+id/displayButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:text="Список друзей"
            android:onClick="showFriends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:text="Показать всё"
            android:onClick="showAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:text="disablePopup"
        android:onClick="popupToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:text="disableLongpoll\n(All tracks will be disabled)"
        android:onClick="longpollToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
